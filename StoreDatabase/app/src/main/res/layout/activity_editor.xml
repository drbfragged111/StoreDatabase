<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.brandonkbarnes.storedatabase.EditorActivity">

    <!-- Item Description category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            android:text="Item Description"
            style="@style/CategoryStyle" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <!-- Name field -->
            <EditText
                android:id="@+id/edit_item_name"
                android:hint="Item Name"
                android:inputType="textCapWords"
                style="@style/EditorFieldStyle" />

            <!-- Price field -->
            <EditText
                android:id="@+id/edit_item_price"
                android:hint="Item Price"
                style="@style/EditorFieldStyle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sale"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="-"/>

                <!-- Quantity field -->
                <EditText
                    android:id="@+id/edit_item_quantity"
                    android:hint="Item Quantity"
                    style="@style/EditorFieldStyle" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="+"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <!-- Supplier Information category -->
    <LinearLayout
        android:id="@+id/container_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            android:text="Supplier Information"
            style="@style/CategoryStyle" />

        <!-- Input field -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Supplier Name -->
            <EditText
                android:id="@+id/supplier_name"
                android:hint="Supplier Name"
                style="@style/EditorFieldStyle"/>

            <!-- Supplier Email -->
            <EditText
                android:id="@+id/supplier_email"
                android:hint="Supplier Email"
                style="@style/EditorFieldStyle" />

            <!-- Supplier Phone Number -->
            <EditText
                android:id="@+id/supplier_phone"
                android:hint="Supplier Phone Number"
                style="@style/EditorFieldStyle" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>